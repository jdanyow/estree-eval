{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "importHelpers": true,
    "lib": [
      "es2017"
    ],
    "outDir": "dist",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "strict": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
